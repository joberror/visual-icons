extends layout.pug

prepend content
	.home-panel
		header
			h2 EXPLORER
			p click on each category to view.
		div
			ul.svg-cat
				-
				each cat, index in catName
					li
						a(href="#cat-" + cat, title= cat + " category")
							svg(data-url="./svg-ui/" + cat + ".svg" )
							ul
								li.cat-name= cat
								li.cat-no= + catTotal[index]

	.panel-section
		.panel-header
			h4 EXPLORER
			hr
			.color-config color-picker: #[span #[em]]
			hr
			.stroke-config
				label(for="str-width") stroke-weight:
				input(type="range", min="0.5", max="1.1", id="str_width", step="0.1", value="0.8")
				output 0.8

		.panel
			.navigator
				h4 #[span Ë…] CATEGORIES
				ul
					-
					each name in catName
						li
							a(title=name, href='/viewer#cat-' + name) #{name}
				p #[span 26] ICONS

			.viewer
				-
				each name, index in catName
					div(id="cat-" + name)
						ul
							each svg in catSvg[index]
								li
									span #[svg(data-url="/svgs/" + svg)]
									em= svg.split('\\').pop().split('/').pop().slice(0, -4)


block variables
	- var title = "Visual Icons: viewer"
	- var css_file_name = "viewer.css"
